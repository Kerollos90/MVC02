@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "View";
}
<a asp-controller="Role" asp-action="Create" class="btn btn-primary ">Create New Role</a>


@if (Model?.Count() > 0)
{
    <table class="table table-striped table table-hover">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>


        </thead>

        <tbody>
            @foreach (var department in Model)
            {
                <tr>

                    <td>@department.Id</td>
                    <td>@department.Name</td>


                    <partial name="_ActionButtonPartialView" model="@department.Id.ToString()" />


                </tr>





            }







        </tbody>













    </table>


}
else
{
    <div class="mt-5 alert-warning">
        <h3> There is no Role</h3>
    </div>


}
