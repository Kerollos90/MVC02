@using Company.Service.Interface.EmployeeInterface.Dto
@model EmployeeDto
@{
    ViewData["Title"] = "Update";
}

<h1>Update Employee</h1>
<br />
<br />

<form asp-action="Update" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="Text" asp-for="Name" class="form-control" />
        @*  <span asp-validation-for="Code" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="Text" asp-for="Age" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="Text" asp-for="PhoneNumber" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="Text" asp-for="Salary" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="Text" asp-for="Address" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DepartmentId"></label>
        <input type="Text" asp-for="DepartmentId" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="Text" asp-for="Email" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="Text" asp-for="HiringDate" class="form-control" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <input type="file" class="asp-for-file" asp-for="Image" />
        @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class=" btn btn-light">Back To List</a>

</form>






